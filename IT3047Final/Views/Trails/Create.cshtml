@model IT3047Final.Models.Trail

@{
    ViewData["Title"] = "Create";
}

<h1>Add Trail</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="trailName" class="control-label"></label>
                <input asp-for="trailName" class="form-control" />
                <span asp-validation-for="trailName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="parkName" class="control-label"></label>
                <input asp-for="parkName" class="form-control" />
                <span asp-validation-for="parkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trailRating" class="control-label"></label>
                <input asp-for="trailRating" class="form-control" />
                <span asp-validation-for="trailRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Trails</a>
</div>

